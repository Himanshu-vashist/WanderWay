<%- layout("/layouts/boilerplate.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wanderlust - Travel Listings Community</title>
    <style>
        body {
            margin-top: 2rem;
           
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        /* Hero Section */
        .hero-section {
            margin-top: 2rem;
            margin-left: 5rem;
            margin-right: 2rem;
            background-color: rgb(68,19,238);
            color: #fff;
            padding: 100px 20px;
            text-align: center;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .hero-section h1 {
            font-size: 3.5em;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .hero-section p {
            font-size: 1.5em;
            margin-bottom: 40px;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 15px 30px;
            font-size: 1.2em;
            text-decoration: none;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            min-width: 200px;
            text-align: center;
        }

        .btn-register {
            background-color: #28a745;
            box-shadow: 5px 5px 10px rgb(57, 56, 56);
        }

        .btn-register:hover {
            background-color: #218838;
            box-shadow: 5px 5px 10px gray;
        }

        .btn-login {
            background-color: #ffc107;
            box-shadow: 5px 5px 10px rgb(57, 56, 56);
            color: #343a40;
        }

        .btn-login:hover {
            background-color: #e0a800;
            box-shadow: 5px 5px 10px gray;
        }

        .img_alm {
            width: 300px;
            margin-top: 40px;
        }

        /* Process Section */
        .process-section {
    padding: 50px 20px;
    font-size: 90%;
 
    margin-left: 3rem;
    text-align: center;
    background: linear-gradient(135deg, #f8f9fa, #dce7f1);
    color: #343a40;
}

.process-section h2 {
    font-size: 2.8em;
    margin-bottom: 10px;
    color: #222;
    font-weight: bold;
}

.section-description {
    font-size: 1.2em;
    margin-bottom: 40px;
    color: #555;
}

.process-steps {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
}

.step {
    background-color: #fff;
    padding: 30px 20px;
    border-radius: 12px;
    width: 250px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
}

.step:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.2);
}

.step h3 {
    margin-top: 20px;
    color: #343a40;
    font-size: 1.6em;
}

.step p {
    color: #6c757d;
    font-size: 1.1em;
    margin-top: 10px;
}

.icon-container {
    background-color: #f0f8ff;
    border-radius: 50%;
    padding: 20px;
    display: inline-block;
    margin-bottom: 20px;
}

.step-icon {
    width: 60px;
    height: 60px;
}

@media (max-width: 768px) {
    .process-steps {
        flex-direction: column;
        align-items: center;
    }

    .step {
        width: 80%;
        margin-bottom: 30px;
    }

    .process-section h2 {
        font-size: 2.2em;
    }

    .step h3 {
        font-size: 1.4em;
    }

    .step p {
        font-size: 1em;
    }
}

        /* Latest Listings Section */
        .listings-section {
            background: #f7f7f7;
            padding: 50px 20px;
            text-align: center;
        }
        .listings-section .vid{
            
                width: 80%;
                margin-left: 6rem;
                border-radius: 8px;
                margin: 1rem 0;

        }
        
  
        .listings-section h2 {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #343a40;
        }

        .listing-card {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            width: 300px;
            margin: 20px auto;
        }

        .listing-card h3 {
            margin-top: 0;
            color: #343a40;
        }

        .listing-card p {
            color: #6c757d;
        }

        .btn-view-listings {
            background-color: #037af8;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

        .btn-view-listings:hover {
            background-color: #0361c8;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .hero-section {
                flex-direction: column;
            }

            .hero-section h1 {
                font-size: 2.5em;
            }

            .hero-section p {
                font-size: 1.2em;
            }

            .btn-action {
                font-size: 1em;
                padding: 10px 20px;
                min-width: 150px;
            }

            .process-steps {
                flex-direction: column;
            }

            .step, .listing-card {
                width: 90%;
            }
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section row">
        <div class="col-8">
            <div class="welcome">
                <h1>Welcome to WanderWay</h1>
                <p>Explore, Share, and Review Travel Destinations</p>
            </div>
            <div class="btn-container">
              <!--  <a href="/signup" class="btn-action btn-register">Register</a>
                <a href="/login" class="btn-action btn-login">Login</a>
            -->
                <% if(!currUser) { %> 
                     <a class="btn-action btn-register" aria-current="page" href="/signup"><b>Sign Up</b></a>
                     <a class="btn-action btn-login" href="/login"><b>Log in</b></a>
                     <% } %>
                     <% if(currUser) { %> 
                     <a class="btn-action btn-login" href="/logout">Logout</a>
                  <% } %>
            </div>
        </div>
        <div class="col-4">
            <img src="https://imgs.search.brave.com/ji8PnaDl8zBOOc5vabG_k2LcfpUgOQqrYEBgthwOInc/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9tZWRp/YS5pc3RvY2twaG90/by5jb20vaWQvNTI1/NDA4OTg5L3Bob3Rv/L2ZhbWlseS13aXRo/LXN1aXRjYXNlcy1w/YXNzaW5nLWJ5LWZv/dW50YWluLWluLXRv/dXJpc3QtcmVzb3J0/LmpwZz9zPTYxMng2/MTImdz0wJms9MjAm/Yz16dEVkRHhWU3ZN/TUJ1dlVNWkJqMERC/V1RaSWRtYlRjUlR5/XzNhMWZ2dkJBPQ" alt="" class="img_alm">
        </div>
    </div>

    <!-- Process Section -->
    <div class="process-section">
        <h2>How Wanderlust Works</h2>
        <p class="section-description">Discover how simple it is to get started with Wanderlust in just a few steps!</p>
        <div class="process-steps">
            <div class="step">
                <div class="icon-container">
                    <img src="https://img.icons8.com/ios-filled/100/000000/login-rounded-right.png" alt="Login Icon" class="step-icon">
                </div>
                <h3>1. Login or Sign Up</h3>
                <p>Create your account to explore listings, share your experiences, and connect with other travelers.</p>
            </div>
            <div class="step">
                <div class="icon-container">
                    <img src="https://img.icons8.com/ios-filled/100/000000/add-property.png" alt="Add Listing Icon" class="step-icon">
                </div>
                <h3>2. Add Your Listing</h3>
                <p>Share your favorite travel spots, accommodations, and tips by adding your own listings.</p>
            </div>
            <div class="step">
                <div class="icon-container">
                    <img src="https://img.icons8.com/ios-filled/100/000000/rating.png" alt="Review Listings Icon" class="step-icon">
                </div>
                <h3>3. View & Review Listings</h3>
                <p>Explore the listings shared by the community, leave reviews, and provide feedback.</p>
            </div>
            <div class="step">
                <div class="icon-container">
                    <img src="https://img.icons8.com/ios-filled/100/000000/edit.png" alt="Edit Icon" class="step-icon">
                </div>
                <h3>4. Edit Your Listings</h3>
                <p>If you're the owner of a listing, you can update details or make edits anytime.</p>
            </div>
            <div class="step">
                <div class="icon-container">
                    <img src="https://img.icons8.com/ios-filled/100/000000/delete-sign.png" alt="Delete Icon" class="step-icon">
                </div>
                <h3>5. Delete Your Listings</h3>
                <p>If you're the owner of a listing, you can delete it at any time.</p>
            </div>
        </div>
    </div>

    <!-- Latest Listings Section -->
    <div class="listings-section">
        <h2>Video For Your Reference </h2>
       
        <h2>How Wanderlust Works</h2>
            <video class="vid" controls>
                <source src="views\listings\WANDELUST VIDEO.mp4">
                Your browser does not support the video tag.
            </video>

     
       
    </div>

    <!-- Optional Bootstrap JS (if needed) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
</body>
</html>
